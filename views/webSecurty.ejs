<script>const creds = {
   admin: "123456",
   guest: "guest",
   testuser: "password"
};
let tryCount = 0;

function tryLogin() {
   const user = document.getElementById("userInput").value;
   const pass = document.getElementById("passInput").value;
   tryCount++;

   if (creds[user] === pass) {
      document.getElementById("log").innerHTML =
         `<p style="color:green;"> Başarılı Giriş: ${user}</p>
  <p style="color:green"> Bu sistemde rate-limiting veya CAPTCHA koruması yok!</p>`;

      document.getElementById("nextBtn").style.display = "inline-block";

   } else {
      document.getElementById("log").innerHTML =
         `<p style="color:red;">Giriş başarısız - ${tryCount}. deneme</p>`;
   }
   if (tryCount > 5) {
      alert("Sistem geçici olarak yanıt vermiyor. Çok fazla giriş denemesi yapıldı.DoS (Denial of Service) zafiyetine dönüştüEğer sistem:\n\n- Her giriş denemesinde veritabanında ağır sorgular çalıştırıyorsa\n - Logging veya email notification gibi işlemler başlatıyorsa\n - Rate-limiting / throttling yoksa\n\n o zaman birkaç yüz ila birkaç bin başarısız giriş denemesiyle:\n\n - Sistem cevap veremez hale gelebilir (örneğin RAM veya CPU tükenmesi).\n - Bu, brute-force saldırısını DoS saldırısına dönüştürür.");
      return;
   }

}

