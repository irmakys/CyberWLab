    <style>
        .xss-test-container {
            max-width: 1200px;
            margin: 80px auto 40px auto;
            padding: 0 20px;
        }

        .xss-test-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .xss-test-title {
            font-size: 2.8rem;
            font-family: 'Inter', sans-serif;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .xss-test-description {
            font-size: 1.3rem;
            font-family: 'Inter', sans-serif;
            font-weight: 300;
            color: #DA7E7E;
            line-height: 1.6;
            max-width: 800px;
            margin: 0 auto;
        }

        .content-section {
            background-color: #6A1E27;
            border: 1px solid #BA9E9E;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .content-section:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
            border-color: #DA7E7E;
        }

        .section-title {
            font-size: 1.8rem;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            color: #DA7E7E;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .section-content {
            font-size: 1.1rem;
            font-family: 'Inter', sans-serif;
            font-weight: 400;
            color: #ffffff;
            line-height: 1.6;
        }

        .section-content p {
            margin-bottom: 15px;
        }

        .section-content ul {
            margin: 15px 0;
            padding-left: 25px;
        }

        .section-content li {
            margin-bottom: 8px;
            color: #DA7E7E;
        }

        .xss-demo-container {
            background-color: #1e0b0dbc;
            border: 2px solid #BA9E9E;
            border-radius: 20px;
            padding: 40px;
            margin: 40px auto;
            max-width: 800px;
            text-align: center;
        }

        .xss-input {
            width: 100%;
            max-width: 500px;
            height: 40px;
            padding: 10px 15px;
            border-radius: 8px;
            border: 2px solid #BA9E9E;
            font-size: 16px;
            margin-bottom: 20px;
            background-color: #ffffff;
            color: #333;
        }

        .xss-button {
            background: #1B2523;
            color: #fff;
            border: 3px solid #D90D1E;
            border-radius: 10px;
            padding: 15px 30px;
            font-weight: bold;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px #A62C21, 0 0 20px #A62C21 inset;
            margin: 10px;
        }

        .xss-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 15px #A62C21, 0 0 25px #A62C21 inset;
        }

        .xss-output {
            background-color: #ffffff;
            border: 2px solid #DA7E7E;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            min-height: 100px;
            text-align: left;
            color: #333;
            font-family: 'Inter', sans-serif;
        }

        .warning-box {
            background-color: rgba(244, 67, 54, 0.1);
            border: 2px solid #F44336;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            color: #F44336;
            font-weight: 600;
        }

                            .next-stage-button {
                        display: block;
                        margin: 40px auto;
                        padding: 18px 45px;
                        background: linear-gradient(135deg, #5E1A23 0%, #973d49 100%);
                        color: #ffffff;
                        text-decoration: none;
                        border-radius: 15px;
                        font-family: 'Inter', sans-serif;
                        font-weight: 700;
                        font-size: 1.3rem;
                        text-align: center;
                        transition: all 0.4s ease;
                        box-shadow: 0 8px 25px rgba(94, 26, 35, 0.4), 0 0 20px rgba(94, 26, 35, 0.2);
                        border: 3px solid #ffffff;
                        width: 250px;
                        position: relative;
                        overflow: hidden;
                        text-transform: uppercase;
                        letter-spacing: 1px;
                        cursor: pointer;
                    }

                    .next-stage-button::before {
                        content: '';
                        position: absolute;
                        top: 0;
                        left: -100%;
                        width: 100%;
                        height: 100%;
                        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                        transition: left 0.5s;
                    }

                    .next-stage-button:hover::before {
                        left: 100%;
                    }

                    .next-stage-button:hover {
                        transform: translateY(-5px) scale(1.05);
                        box-shadow: 0 15px 35px rgba(94, 26, 35, 0.5), 0 0 30px rgba(94, 26, 35, 0.3);
                        background: linear-gradient(135deg, #973d49 0%, #5E1A23 100%);
                        border-color: #DA7E7E;
                    }

                    @media (max-width: 768px) {
                        .xss-test-title {
                            font-size: 2.2rem;
                        }

                        .xss-test-description {
                            font-size: 1.1rem;
                        }

                        .section-title {
                            font-size: 1.5rem;
                        }

                        .section-content {
                            font-size: 1rem;
                        }

                        .content-section {
                            padding: 25px;
                        }

                        .xss-demo-container {
                            padding: 25px;
                        }

                        .next-stage-button {
                            width: 200px;
                            padding: 15px 35px;
