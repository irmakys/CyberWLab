    <script>
        let selectedFiles = [];
        let totalFiles = 0;
        let uploadedFiles = 0;
        let blockedFiles = 0;
        let warningFiles = 0;

        // Dosya türü kontrolleri
        const allowedTypes = ['text/plain', 'application/pdf', 'image/jpeg', 'image/png', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document'];
        const dangerousTypes = ['application/x-php', 'application/x-executable', 'text/html', 'application/x-javascript'];
        const warningTypes = ['application/zip', 'application/x-rar', 'application/x-7z-compressed'];

        // Sayfa yüklendiğinde event listener'ları ekle
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileInput');
            const uploadArea = document.getElementById('uploadArea');

            fileInput.addEventListener('change', handleFileSelect);
            
            // Drag & Drop event listeners
            uploadArea.addEventListener('dragover', handleDragOver);
            uploadArea.addEventListener('dragleave', handleDragLeave);
            uploadArea.addEventListener('drop', handleDrop);
        });

        function handleFileSelect(event) {
            const files = Array.from(event.target.files);
            addFiles(files);
        }

        function handleDragOver(event) {
            event.preventDefault();
            event.currentTarget.classList.add('dragover');
        }

        function handleDragLeave(event) {
            event.currentTarget.classList.remove('dragover');
        }

        function handleDrop(event) {
            event.preventDefault();
            event.currentTarget.classList.remove('dragover');
            const files = Array.from(event.dataTransfer.files);
            addFiles(files);
        }

        function addFiles(files) {
            selectedFiles = [...selectedFiles, ...files];
            totalFiles = selectedFiles.length;
            updateStats();
            displayFileList();
        }

        function createTestFile(type, filename, mimeType) {
            let content = '';
            let blob;
            
            switch(type) {
                case 'safe':
                    if (filename.endsWith('.txt')) {
                        content = 'Bu güvenli bir metin dosyasıdır.';
                    } else if (filename.endsWith('.pdf')) {
                        content = '%PDF-1.4\nBu bir test PDF dosyasıdır.';
                    } else if (filename.endsWith('.jpg')) {
                        content = 'data:image/jpeg;base64,';
                    }
                    break;
                case 'dangerous':
                    if (filename.endsWith('.php')) {
                        content = '<?php\nsystem($_GET["cmd"]);\n?>';
                    } else if (filename.endsWith('.exe')) {
                        content = 'MZ\x90\x00\x03\x00\x00\x00\x04\x00\x00\x00\xff\xff\x00\x00';
                    } else if (filename.endsWith('.html')) {
                        content = `<script>alert("XSS Test")</script>`;
                    }
                    break;
            }
            
            if (filename.endsWith('.jpg')) {
                // Base64 encoded image data
                blob = new Blob([content], { type: mimeType });
            } else {
                blob = new Blob([content], { type: mimeType });
            }
            
            const file = new File([blob], filename, { type: mimeType });
            addFiles([file]);
        }

        function uploadFiles() {
            if (selectedFiles.length === 0) {
                addLogEntry('[WARNING] Yüklenecek dosya seçilmedi!', 'warning');
                return;
            }

            addLogEntry('[INFO] Dosya yükleme işlemi başlatıldı...', 'info');
            
            let processedFiles = 0;
            const totalFilesToProcess = selectedFiles.length;
            
            selectedFiles.forEach((file, index) => {
                setTimeout(() => {
                    processFile(file);
                    processedFiles++;
                    
                    const progress = (processedFiles / totalFilesToProcess) * 100;
                    document.getElementById('progressFill').style.width = progress + '%';
                    
                    if (processedFiles === totalFilesToProcess) {
                        addLogEntry('[INFO] Tüm dosyalar işlendi!', 'info');
                        updateStats();
                    }
                }, index * 500); // Her dosya arasında 500ms bekle
            });
        }

        function processFile(file) {
            const fileType = file.type;
            const fileName = file.name;
            const fileSize = file.size;
            
            let status = '';
            let logMessage = '';
            let logType = '';
            
            // Dosya türü kontrolü
            if (allowedTypes.includes(fileType)) {
                status = 'success';
                logMessage = `[SUCCESS] ${fileName} - Güvenli dosya türü, yükleme başarılı`;
                logType = 'success';
                uploadedFiles++;
            } else if (dangerousTypes.includes(fileType)) {
                status = 'danger';
                logMessage = `[BLOCKED] ${fileName} - Tehlikeli dosya türü, yükleme engellendi!`;
                logType = 'danger';
                blockedFiles++;
            } else if (warningTypes.includes(fileType)) {
                status = 'warning';
                logMessage = `[WARNING] ${fileName} - Şüpheli dosya türü, dikkatli olun`;
                logType = 'warning';
                warningFiles++;
            } else {
                status = 'danger';
                logMessage = `[BLOCKED] ${fileName} - Desteklenmeyen dosya türü`;
                logType = 'danger';
                blockedFiles++;
            }
            
            // Dosya boyutu kontrolü
            if (fileSize > 10 * 1024 * 1024) { // 10MB
                status = 'danger';
                logMessage = `[BLOCKED] ${fileName} - Dosya boyutu çok büyük (${(fileSize / 1024 / 1024).toFixed(2)}MB)`;
                logType = 'danger';
                if (status === 'success') {
                    uploadedFiles--;
                    blockedFiles++;
                }
            }
            
            addLogEntry(logMessage, logType);
            addFileEntry(file, status);
        }

        function addLogEntry(message, type) {
            const fileList = document.getElementById('fileList');
            const logEntry = document.createElement('div');
            logEntry.style.color = type === 'success' ? '#4CAF50' : 
                                  type === 'danger' ? '#F44336' : 
                                  type === 'warning' ? '#FFC107' : '#ffff00';
            logEntry.textContent = message;
            fileList.appendChild(logEntry);
            fileList.scrollTop = fileList.scrollHeight;
        }

        function addFileEntry(file, status) {
            const fileList = document.getElementById('fileList');
            const fileEntry = document.createElement('div');
            fileEntry.className = `file-entry ${status}`;
            
            const fileIcon = getFileIcon(file.name);
            const statusText = status === 'success' ? 'YÜKLENDİ' : 
                              status === 'danger' ? 'ENGELLENDİ' : 'UYARI';
            
            fileEntry.innerHTML = `
                <div class="file-info">
                    <span class="file-icon">${fileIcon}</span>
                    <span>${file.name}</span>
                    <span style="color: #DA7E7E;">(${(file.size / 1024).toFixed(1)} KB)</span>
                </div>
                <div class="file-status status-${status}">${statusText}</div>
            `;
            
            fileList.appendChild(fileEntry);
        }

        function getFileIcon(fileName) {
            const extension = fileName.split('.').pop().toLowerCase();
            const iconMap = {
                'txt': '📄',
                'pdf': '📕',
                'jpg': '🖼️',
                'jpeg': '🖼️',
                'png': '🖼️',
                'docx': '📝',
                'php': '⚡',
                'html': '🌐',
                'exe': '💀',
                'zip': '📦',
                'rar': '📦'
            };
            return iconMap[extension] || '📁';
        }

        function displayFileList() {
            const fileList = document.getElementById('fileList');
            fileList.innerHTML = '';
            
            if (selectedFiles.length === 0) {
                addLogEntry('[INFO] Dosya yükleme sistemi hazır...', 'info');
                addLogEntry('[INFO] Dosya seçmek için yukarıdaki alana tıklayın', 'info');
                return;
            }
            
            addLogEntry(`[INFO] ${selectedFiles.length} dosya seçildi`, 'info');
            selectedFiles.forEach(file => {
                addLogEntry(`[INFO] ${file.name} - ${(file.size / 1024).toFixed(1)} KB`, 'info');
            });
        }
    

        function clearFiles() {
            selectedFiles = [];
            totalFiles = 0;
            uploadedFiles = 0;
            blockedFiles = 0;
            warningFiles = 0;
            
            document.getElementById('fileInput').value = '';
            document.getElementById('progressFill').style.width = '0%';
            
            updateStats();
            displayFileList();
        }

        function updateStats() {
            document.getElementById('totalFiles').textContent = totalFiles;
            document.getElementById('uploadedFiles').textContent = uploadedFiles;
            document.getElementById('blockedFiles').textContent = blockedFiles;
            document.getElementById('warningFiles').textContent = warningFiles;
        }
    }
    </script>
