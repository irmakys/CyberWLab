    <script>
        function testSQL() {
            const input = document.getElementById('sqlInput').value;
            const output = document.getElementById('sqlOutput');
            
            if (input.trim() === '') {
                output.innerHTML = '<p style="color: #F44336;">Lütfen bir SQL injection payload\'ı girin!</p>';
                return;
            }
            
            // Güvenlik için sadece demo amaçlı
            output.innerHTML = `
                <h4>Girilen Payload:</h4>
                <p style="background: #f5f5f5; padding: 10px; border-radius: 5px; font-family: monospace;">
                    ${escapeHtml(input)}
                </p>
                <hr>
                <h4>SQL Sorgusu (Güvenli):</h4>
                <div style="background: #e8f5e8; padding: 10px; border-radius: 5px; border-left: 4px solid #4CAF50;">
                    SELECT * FROM users WHERE username = '${escapeHtml(input)}' AND password = '***'
                </div>
                <hr>
                <h4>⚠️ Uyarı:</h4>
                <p style="color: #F44336;">Bu payload gerçek bir sistemde çalıştırılsaydı SQL injection saldırısı gerçekleşebilirdi!</p>
            `;
        }

        function clearSQLOutput() {
            document.getElementById('sqlOutput').innerHTML = 'SQL injection payload\'ını test etmek için yukarıdaki input alanını kullanın...';
            document.getElementById('sqlInput').value = '';
        }

        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, function(m) { return map[m]; });
        }
    </script>
